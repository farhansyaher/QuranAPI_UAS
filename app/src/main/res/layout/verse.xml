<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvAyatKe"
        android:text="1."
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvAyat"
        android:layout_toEndOf="@+id/tvAyatKe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textDirection="anyRtl"
        android:text="بِسْمِ ٱللَّهِ ٱلرَّحْمَـٰنِ ٱلرَّحِيمِ"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/tvTerjemahanAyat"
        android:layout_below="@id/tvAyat"
        android:layout_toEndOf="@+id/tvAyatKe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="Arti Ayat : Lorem Ipsum"
        android:textSize="14sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tvTerjemahanAyat"
        android:layout_marginTop="5dp"
        android:background="@color/black"/>

</RelativeLayout>